<!-- app/views/image_classification/index.html.erb -->

<style>
  .generated-image {
    max-width: 100%; /* Adjust the maximum width as needed */
    max-height: 400px; /* Adjust the maximum height as needed */
  }
</style>

<div class="container mt-5">
  <div class="card mb-3">
    <div class="card-header">
      Upload File
    </div>
    <div class="card-body">
      <%= form_with url: image_classification_classify_path, local: true, multipart: true do |form| %>
        <div class="form-group">
          <%= form.label :file, "Upload file", class: "form-label" %>
          <%= form.file_field :file, class: "form-control", required: true %>
        </div>
        <div class="form-group mt-3">
          <%= form.submit "Classify", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="alert alert-success">
    <h4 class="alert-heading">Prediction Result</h4>
    <p><strong id="prediction_result"><%= @result %></strong></p>
    <hr>
    <h4>Generated Image</h4>
    <%= image_tag url_for(action: 'serve_tmp_image', path: @image_path), id: 'generated_image', class: 'img-fluid generated-image' %>
  </div>
</div>
